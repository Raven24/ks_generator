
%label{for: 'usernames'}
  Usernames
  %small
    (No special characters, one name per line)
%textarea#usernames{name: 'auth[users]', cols: 30, rows: 2}

- if @version.at_least?("F22")
  %label{for: 'sshkeys'}
    SSH Keys
    %br
    %small
      Key will be added to a users
      %tt
        authorized_keys
      file. The username can be
      %tt
        root
      or one that will be created by this Kickstart file.
      %br
      (Format:
      %tt
        [username] [ssh-key]
      )
  %textarea#sshkeys{name: 'auth[sshkeys]', cols: 120, rows: 2}

= checkbox('ks[auth[useshadow]]', 'Use shadow passwords', true)

= passalgo_opts('ks[auth[passalgo]]', @os['options'].detect {|o| o['name'] == 'passalgo' })
